<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_block"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/material_light_white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/material_layout_keylines_screen_edge_margin"
    android:paddingBottom="@dimen/material_layout_keylines_screen_edge_margin">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_block_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="@dimen/material_component_lists_single_line_text_size"
            android:textStyle="bold"
            tools:text="Afternoon (16h - 20h)"/>

        <TextView
            android:id="@+id/txt_block_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/material_component_lists_single_line_text_size"
            tools:text="100000 VND"
            android:textColor="@color/colorAccent"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/layout_block_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:text="@string/text_bear_note"/>

        <TextView
            android:id="@+id/txt_block_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Just hug, not kiss or abcxyz"/>
    </LinearLayout>

</LinearLayout>